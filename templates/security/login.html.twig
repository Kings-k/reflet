{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <style>
        .auth-content form {
            width: 90%;
        }
        @media screen and (min-width: 768px) {
            .auth-content > .card {
                width: 50vw !important;
            }
        }
        @media screen and (min-width: 992px) {
            .auth-content > .card {
                width: 30vw !important;
            }
        }
    </style>
{% endblock %}

{% block body %}
<!-- [ auth-signin ] start -->
<div class="auth-content h-100 d-flex justify-content-center align-items-center px-lg-5">
    <div class="card shadow mb-5">
        <div class="card-body d-flex flex-column align-items-center py-5">
            {# <img src="../assets/images/logo-dark.png" alt="" class="img-fluid mb-4"> #}
            {# <img src="/assets/images/icon.png" alt="" class="img-fluid w-25 mb-3"> #}
            <h4 class="mb-4 f-w-400 text-center">Connexion</h4>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    </div>
                {% endif %}
                <div class="form-outline d-flex justify-content-between my-4">
                    <span class="input-group-text border-0 pl-3 pr-1"><i class="fas fa-user"></i></span>
                    <input type="text" value="{{ last_username }}" name="username" class="form-control form-control-lg rounded" placeholder="Nom d'utilisateur" required autofocus>
                </div>
                <div class="form-outline d-flex justify-content-between my-4">
                    <span class="input-group-text border-0 pl-3 pr-1"><i class="fas fa-lock"></i></span>
                    <input type="password" name="password" id="inputPassword" class="form-control form-control-lg rounded" placeholder="Mot de passe" required>
                </div>
                <div class="d-flex justify-content-between my-4 px-1 small">
                    <div class="d-flex align-items-center">
                        <input type="checkbox" class="form-check-input mt-0" name="_remember_me" id="remember_me" checked>
                        <label for="remember_me" class="cr ml-1 mb-0">&nbsp;Rester connecté</label>
                    </div>
                    <div><a href="#">Mot de passe oublié ?</a></div>
                </div>
                <button class="btn btn-block btn-lg btn-primary mt-4" type="submit">Se connecter</button>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
            {# <p class="mb-2 text-muted">Forgot password? <a href="auth-reset-password.html" class="f-w-400">Reset</a></p> #}
        </div>
    </div>
</div>
<!-- [ auth-signin ] end -->
{% endblock %}
