{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="preconnect" href="https://fonts.gstatic.com">
<!-- MDB icon -->
<link rel="icon" href="{{ asset('assets/img/mdb-favicon.ico') }}" type="image/x-icon" />
<!-- Font Awesome -->
<link rel="stylesheet" href="{{ asset('assets/fontawesome/css/all.css') }}" />
<!-- Google Fonts Roboto -->
<link rel="stylesheet" href="{{ asset('assets/styles/fonts.css') }}" />
<!-- MDB -->
<link rel="stylesheet" href="{{ asset('public/build/app.css') }}" />
<style>
    body {
        font-family: Roboto, 'Open Sans', sans-serif;
    }
    /* form > .form-outline {
        width: 90%;
    }
    @media screen and (min-width: 768px) {
        form > .form-outline {
            width: 50%;
        }
    } */
    .card {
        width: 90%;
    }
    .card:last-of-type {
        min-height: 30%;
        border: 1px solid #ddd;
        border-radius: 8px;
    }
    .card:first-of-type {
        /* border-top: 4px solid #0d6efd; */
        border-top: 4px solid #6c757d;
        /* border-radius: 4px; */
    }
    @media screen and (min-width: 768px) {
        .card {
            width: 40%;
            padding-left: 10px;
            padding-right: 10px;
        }
    }
    .form-outline {
        margin-bottom: 20px;
        /* border: 2px solid #0d6efd; */
        border-radius: 4px;
    }
</style>
{% endblock %}

{% block body %}
    <div class="bg-light d-flex flex-column justify-content-center align-items-center vh-100">
        <div class="card shadow-sm text-center h5 py-3 my-3">Configurations de votre entreprise</div>
        <div class="card shadow-sm pt-3">
            <div class="card-body d-flex flex-column justify-content-between">
                <!-- <div class="card-title text-center h5 my-3">Configurations de base</div> -->
                <form class="flex-grow-1 d-flex flex-column justify-content-end">
                    <div id="step1">
                        <div class="form-outline">
                            <input type="text" name="nomSociete" id="nomSociete" class="form-control mb-0" required />
                            <label class="form-label" for="nomSociete">Nom de l'entreprise</label>
                        </div>
                    </div>
                    <div id="step2" hidden>
                        <div class="form-outline my-4">
                            <input type="text" name="registreCommerce" id="registreCommerce" class="form-control" />
                            <label class="form-label" for="registreCommerce">Registre de commerce</label>
                        </div>
                        <div class="form-outline my-4">
                            <input type="text" name="idNationnal" id="idNationnal" class="form-control" />
                            <label class="form-label" for="idNationnal">Identification nationale</label>
                        </div>
                        <div class="form-outline my-4">
                            <input type="text" name="numImpot" id="numImpot" class="form-control" />
                            <label class="form-label" for="numImpot">Numéro d'impôt</label>
                        </div>
                        <div class="form-outline my-4">
                            <input type="text" name="autorisationFct" id="autorisationFct" class="form-control" />
                            <label class="form-label" for="autorisationFct">Autorisation de fonctionnement</label>
                        </div>
                    </div>
                    <div id="step3" hidden>
                        <div class="form-outline my-4">
                            <input type="text" name="adressePhysique" id="adressePhysique" class="form-control" />
                            <label class="form-label" for="adressePhysique">Adresse physique</label>
                        </div>
                        <div class="form-outline my-4">
                            <input type="text" name="telephone" id="telephone" class="form-control" />
                            <label class="form-label" for="telephone">Téléphone</label>
                        </div>
                        <div class="form-outline my-4">
                            <input type="email" name="mail" id="mail" class="form-control" />
                            <label class="form-label" for="mail">E-mail</label>
                        </div>
                        <div class="form-outline my-4">
                            <input type="text" name="site" id="site" class="form-control" />
                            <label class="form-label" for="site">Site web</label>
                        </div>
                    </div>
                    <div id="step4" hidden>
                        <div class="form-group">
                            <label class="form-label" for="logo">Logo</label>
                            <input type="file" name="logo" id="logo" class="form-control">
                        </div>
                    </div>
                </form>
                <div class="flex-grow-1 d-flex justify-content-end align-items-end">
                    <button id="prevBtn" class="btn ml-0" type="button" hidden>Précédent</button>
                    <button id="nextBtn" class="btn btn-primary mr-0" type="button">Suivant</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <!-- MDB -->
    <script type="text/javascript" src="{{ asset('assets/mdb/js/mdb.min.js') }}"></script>
    <!-- Settings -->
    <script src="{{ asset('assets/settings.js') }}"></script>
{% endblock %}
